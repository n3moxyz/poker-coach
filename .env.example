# Poker Coach - Environment Variables
# Copy this to .env and fill in your values

# ===================
# Backend Variables
# ===================

# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:password@localhost:5432/poker_coach

# Clerk Authentication (get from dashboard.clerk.com)
CLERK_SECRET_KEY=sk_test_...
CLERK_PUBLISHABLE_KEY=pk_test_...

# Server port (optional, defaults to 3001)
PORT=3001

# ===================
# Frontend Variables
# ===================
# Note: Frontend uses VITE_ prefix for env vars

# Clerk publishable key (same as backend)
VITE_CLERK_PUBLISHABLE_KEY=pk_test_...

# API URL for the backend
VITE_API_URL=http://localhost:3001/api
